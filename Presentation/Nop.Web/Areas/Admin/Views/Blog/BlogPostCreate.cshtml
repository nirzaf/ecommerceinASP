@model BlogPostModel
@{    
    //page title
    ViewBag.Title = T("Admin.ContentManagement.Blog.BlogPosts.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Blog posts");
}

<form asp-controller="Blog" asp-action="BlogPostCreate" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.ContentManagement.Blog.BlogPosts.AddNew")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="BlogPosts">@T("Admin.ContentManagement.Blog.BlogPosts.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.BlogDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>