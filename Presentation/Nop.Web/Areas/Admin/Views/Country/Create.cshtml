@model CountryModel

@{
    //page title
    ViewBag.Title = T("Admin.Configuration.Countries.AddNew").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Countries");
}

<form asp-controller="Country" asp-action="Create" method="post" id="country-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.Countries.AddNew") 
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Configuration.Countries.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.CountryDetailsButtons })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>