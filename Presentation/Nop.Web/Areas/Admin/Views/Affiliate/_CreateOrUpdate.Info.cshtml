@model AffiliateModel

<div class="panel-body">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @if (Model.Id > 0)
                {
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="Url" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.Url</div>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Active" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Active" />
                        <span asp-validation-for="Active"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <nop-editor asp-for="Address" asp-template="Address" />
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AdminComment" />
                    </div>
                    <div class="col-md-9">
                        <nop-textarea asp-for="AdminComment"></nop-textarea>
                        <span asp-validation-for="AdminComment"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="FriendlyUrlName" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="FriendlyUrlName" />
                        <span asp-validation-for="FriendlyUrlName"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
