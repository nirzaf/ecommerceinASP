@model EditForumPostModel
@{   
    Layout = "_ColumnsOne";

    Html.AddTitleParts(T("Forum.PageTitle.PostEdit").Text);
}
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.BoardsPostEditBefore, additionalData = Model })
<form asp-route="PostEdit" method="post">
    @await Html.PartialAsync("_CreateUpdatePost", Model)
</form>
@await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.BoardsPostEditAfter, additionalData = Model })
